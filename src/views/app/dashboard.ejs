<%- include("../partials/header", { title: "Dashboard" }) %>
<%- include("../partials/alerts") %>

<h1>Dashboard</h1>

<div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
  <p class="mb-0 text-secondary">Track all applications you have submitted.</p>
  <a class="btn btn-dark" href="/apply">Submit application</a>
</div>

<% const appList = applications || []; %>
<% if (!appList.length) { %>
  <div class="card shadow-sm">
    <div class="card-body">
      <p class="mb-0">You have no applications yet.</p>
    </div>
  </div>
<% } else { %>
  <% const statusClasses = { APPROVED: "success", REJECTED: "danger", PENDING: "warning" }; %>
  <div class="row g-3">
    <% appList.forEach((application) => { %>
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
              <h2 class="h5 mb-0">Application #<%= application.id %></h2>
              <span class="badge text-bg-<%= statusClasses[application.status] || "secondary" %>">
                <%= application.status %>
              </span>
            </div>
            <div class="row g-3">
              <div class="col-12 col-md-6">
                <div class="text-uppercase text-secondary small">Organization</div>
                <div class="fw-semibold"><%= application.organization || "-" %></div>
              </div>
              <div class="col-12 col-md-6">
                <div class="text-uppercase text-secondary small">Phone</div>
                <div class="fw-semibold"><%= application.phone || "-" %></div>
              </div>
              <div class="col-12">
                <div class="text-uppercase text-secondary small">Message</div>
                <div class="fw-semibold"><%= application.message || "-" %></div>
              </div>
              <div class="col-12">
                <div class="text-uppercase text-secondary small">Admin note</div>
                <div class="fw-semibold"><%= application.admin_note || "-" %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
    <% if (pagination && pagination.totalPages > 1) { %>
    <nav class="mt-4" aria-label="Applications pagination">
      <ul class="pagination justify-content-center mb-0">
        <li class="page-item <%= pagination.currentPage === 1 ? "disabled" : "" %>">
          <a
            class="page-link"
            href="<%= pagination.basePath %>?page=<%= pagination.currentPage - 1 %>"
            aria-label="Previous"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <% for (let page = 1; page <= pagination.totalPages; page++) { %>
          <li class="page-item <%= page === pagination.currentPage ? "active" : "" %>">
            <a class="page-link" href="<%= pagination.basePath %>?page=<%= page %>">
              <%= page %>
            </a>
          </li>
        <% } %>
        <li class="page-item <%= pagination.currentPage === pagination.totalPages ? "disabled" : "" %>">
          <a
            class="page-link"
            href="<%= pagination.basePath %>?page=<%= pagination.currentPage + 1 %>"
            aria-label="Next"
          >
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  <% } %>
<% } %>
<%- include("../partials/footer") %>