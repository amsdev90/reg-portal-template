<%- include("../partials/header", { title: "Register" }) %>
<%- include("../partials/alerts") %>

<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="h3 mb-3">Create account</h1>

        <form method="post" action="/register">
		  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <label class="form-label">Full Name</label>
          <input class="form-control mb-3" name="full_name" required />

          <label class="form-label">Email</label>
          <input class="form-control mb-3" name="email" type="email" required />

          <label class="form-label">Password</label>
          <input
            class="form-control"
            name="password"
            type="password"
            required
            pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9]).{8,}"
            title="Password must be at least 8 characters and include uppercase, lowercase, number, and symbol."
          />
          <div class="form-text mb-3">
            Password must be at least 8 characters and include uppercase, lowercase, number, and symbol.
          </div>

          <label class="form-label">Confirm Password</label>
          <input class="form-control mb-3" name="confirm_password" type="password" required />

          <button class="btn btn-dark w-100" type="submit">Register</button>
        </form>

        <div class="mt-3 small">
          Already have an account? <a href="/login">Login</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
