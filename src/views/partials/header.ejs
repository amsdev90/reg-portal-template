<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "Reg Portal" %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Your overrides (optional) -->
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="bg-light">
<header class="border-bottom bg-white">
  <div class="container py-3 d-flex align-items-center gap-3">
    <div class="fw-bold">Reg Portal</div>
    <div class="flex-grow-1"></div>

    <% if (currentUser) { %>
      <div class="text-secondary small">
        <span class="me-2"><%= currentUser.full_name %> (<%= currentUser.role %>)</span>
        <form action="/logout" method="post" class="d-inline">
          <button class="btn btn-outline-dark btn-sm" type="submit">Logout</button>
        </form>
      </div>
    <% } else { %>
      <a class="btn btn-outline-dark btn-sm" href="/login">Login</a>
    <% } %>
  </div>
</header>
<nav class="bg-white border-bottom">
  <div class="container py-2 d-flex gap-2">
	<a class="btn btn-sm btn-outline-dark" href="/">Home</a>
    <% if (currentUser) { %>
      <% if (currentUser.role === "ADMIN") { %>
        <a class="btn btn-sm btn-outline-dark" href="/admin/applications">Applications</a>
		<a class="btn btn-sm btn-outline-dark" href="/admin/users/new">Create User</a>
      <% } else { %>
        <a class="btn btn-sm btn-outline-dark" href="/dashboard">Dashboard</a>
        <a class="btn btn-sm btn-outline-dark" href="/apply">Submit Application</a>
      <% } %>
    <% } %>
  </div>
</nav>
<main class="container my-4">
